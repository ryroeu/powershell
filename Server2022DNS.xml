<Interfaces xmlns:wcm="http://schemas.microsoft.com/WMIConfig/2002/State">
   <Interface wcm:action="add">
    <Identifier>@@NetworkAdapterName@@</Identifier>
    <EnableAdapterDomainNameRegistration>true</EnableAdapterDomainNameRegistration>
    <EnableDomainNameQueryRegistration>true</EnableDomainNameQueryRegistration>
    <UseDomainNameDevolution>true</UseDomainNameDevolution>
    <DNSServerSearchOrder>
      <IpAddress wcm:action="add" wcm:keyValue="1">@@DNSServer@@</IpAddress>
      </DNSServerSearchOrder>
    <DNSDomain>@@DNSDomain@@</DNSDomain> </Interface>
 </Interfaces>